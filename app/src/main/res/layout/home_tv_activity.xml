<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_px_120">

            <TextView
                android:id="@+id/versionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my_px_30"
                android:textColor="#5D7B97"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_px_40"
                android:text="中幼学院"
                />

            <TextView

                android:id="@+id/tv_expostor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/my_px_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:text="v1.0.0"
                android:textColor="@color/white"
                android:textSize="@dimen/my_px_30" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mLayoutState"
            android:layout_width="@dimen/my_px_980"
            android:layout_height="@dimen/my_px_730"
            android:layout_marginLeft="@dimen/my_px_162"
            android:layout_marginTop="@dimen/my_px_170"
            android:layout_marginRight="@dimen/my_px_142"
            android:background="@drawable/common_deepblue_round"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mIvStatePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_px_100"
                android:src="@drawable/img_unonline" />

            <TextView
                android:id="@+id/mTvStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_px_80"
                android:text="以最热忱的态度，做最专业的讲解"
                android:textColor="@color/text_gray_565666"
                android:textSize="@dimen/my_sp_34" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mIvArrowOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutState"
            android:layout_marginLeft="@dimen/my_px_460"
            android:src="@drawable/ic_callbackground_arrow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mIvArrowOffline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutState"
            android:layout_marginLeft="@dimen/my_px_720"
            android:src="@drawable/ic_callbackground_arrow" />

        <LinearLayout
            android:layout_width="@dimen/my_px_480"
            android:layout_height="@dimen/my_px_730"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/my_px_170"
            android:layout_marginRight="@dimen/my_px_162"
            android:background="@drawable/common_deepblue_round"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/mLayoutStar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_px_120"
                android:background="@drawable/common_deepblue2_round"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mIvStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/my_px_120"
                    android:src="@drawable/ic_star_title" />

                <ImageView
                    android:id="@+id/mIvStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_title" />

                <ImageView
                    android:id="@+id/mIvStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_title" />

                <ImageView
                    android:id="@+id/mIvStar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_title" />

                <ImageView
                    android:id="@+id/mIvStar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_title" />

                <TextView
                    android:id="@+id/mTvStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_px_20"
                    android:textColor="@color/text_yellow_fff000"
                    android:textSize="@dimen/my_sp_58"
                    android:textStyle="bold"
                    tools:text="4.9" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/my_px_270"
                android:layout_height="@dimen/my_px_250"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/my_px_40">

                <ImageView
                    android:id="@+id/mIvHead"
                    android:layout_width="@dimen/my_px_270"
                    android:layout_height="@dimen/my_px_250"
                    tools:src="@color/green" />

                <ImageView
                    android:id="@+id/mIvGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_shoppers_gold_medal" />

            </FrameLayout>

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/my_px_25"
                android:includeFontPadding="false"
                android:textColor="@color/text_yellow_fff000"
                android:textSize="@dimen/my_sp_46"
                android:textStyle="bold"
                tools:text="唐大山" />

            <TextView
                android:id="@+id/mTvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_50"
                android:layout_marginTop="@dimen/my_px_20"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_34"
                tools:text="北京" />

            <TextView
                android:id="@+id/mTvReviewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mLayoutStar"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/my_px_50"
                android:layout_marginTop="@dimen/my_px_20"
                android:drawableLeft="@drawable/ic_appraise"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_34"
                tools:text="评价率 0%" />

            <TextView
                android:id="@+id/mTvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTvReviewRate"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/my_px_50"
                android:layout_marginTop="@dimen/my_px_20"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_34"
                tools:text="累计通话 364次" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/my_px_120"
            >
            <TextView
                android:id="@+id/mTvStateOnline"
                android:layout_width="@dimen/my_px_228"
                android:layout_height="@dimen/my_px_78"
                android:layout_marginLeft="@dimen/my_px_400"
                android:background="@drawable/common_yellow_btn_selector"
                android:focusable="true"
                android:gravity="center"
                android:text="在线"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_34"
                />

            <TextView
                android:id="@+id/mTvStateOffline"
                android:layout_width="@dimen/my_px_228"
                android:layout_height="@dimen/my_px_78"
                android:layout_marginLeft="@dimen/my_px_40"
                android:background="@drawable/common_gray_btn_selector"
                android:focusable="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="离线"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_34"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/mTvSpace"
            android:layout_width="@dimen/my_px_228"
            android:layout_height="@dimen/my_px_78"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/my_px_10"
            android:layout_marginRight="348dp"
            android:background="@drawable/common_gray_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="商学院"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_34"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mTvEdit"
            android:layout_width="@dimen/my_px_228"
            android:layout_height="@dimen/my_px_78"
            android:layout_below="@+id/mIvArrowOnline"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/my_px_10"
            android:layout_marginRight="190dp"
            android:background="@drawable/common_gray_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="教室"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="@dimen/my_sp_34" />

        <TextView
            android:id="@+id/mTvLogout"
            android:layout_width="@dimen/my_px_228"
            android:layout_height="@dimen/my_px_78"
            android:layout_below="@+id/mIvArrowOnline"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/my_px_10"
            android:layout_marginRight="32dp"
            android:background="@drawable/common_gray_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="@dimen/my_sp_34" />

    </RelativeLayout>


</layout>