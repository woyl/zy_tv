<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/cover_layout"
        android:layout_width="400px"
        android:layout_height="450px"
        android:background="@drawable/bg_right_angle_selector"
        android:focusableInTouchMode="true"
        android:padding="2dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/my_px_400"
            android:layout_height="@dimen/my_px_450"
            android:background="@color/c_172938"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/videoIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120px"
            android:src="@drawable/icon_play"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@color/c_ff9900"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="20张"
            android:textColor="@color/white"
            android:textSize="14sp" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <TextView
                android:paddingTop="@dimen/my_px_6"
                android:gravity="center"
                android:background="@drawable/bg_upload_time_selector"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:focusable="true"
                android:textColor="@drawable/material_text_color_selector"
                android:textSize="16sp"
                tools:text="测试" />


            <TextView
                android:layout_below="@+id/name"
                android:id="@+id/upload_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_upload_time_selector"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/my_px_12"
                android:paddingBottom="@dimen/my_px_12"
                android:text="今天 9：30 上传"
                android:textColor="@drawable/material_text_color_selector"
                android:textSize="16sp" />

        </RelativeLayout>


    </FrameLayout>

    <Button
        android:id="@+id/preview"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="预览"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/use"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_button_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="使用"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>