<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bj"

    tools:context=".business.SignInActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="600pt"
            android:layout_height="600pt"
            android:src="@drawable/ico_logo2" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="100pt"
        android:padding="24dp"
        android:background="@color/white"
        android:layout_width="800pt"
        android:layout_height="1000pt"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="22dp"
            android:id="@+id/signin_qrcode"
            android:layout_width="600pt"
            android:layout_height="600pt"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_marginTop="22dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="请用微信扫码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="20sp"
            android:text="@string/signin_tips" />
    </LinearLayout>

</LinearLayout>
