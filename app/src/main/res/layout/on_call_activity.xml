<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="654dp"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/my_px_160"
        android:layout_marginLeft="@dimen/my_px_160"
        android:background="@drawable/login_bg_shape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/my_px_100"
                android:layout_height="@dimen/my_px_100"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_40"/>

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_30"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/mWaterWave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/water_wave" />

        <ImageView
            android:id="@+id/mImWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/img_waiting_answer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mIvAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/bg_call_selector"
                    android:src="@drawable/btn_answer"
                    android:layout_marginBottom="@dimen/my_px_24"
                    android:focusable="true" >
                    <requestFocus />
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="接通"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my_sp_30" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mIvReject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/bg_call_selector"
                    android:src="@drawable/btn_hangup"
                    android:layout_marginBottom="@dimen/my_px_24"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal"
                    android:text="拒接"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/my_sp_30" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>