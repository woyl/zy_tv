<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:layout_width="@dimen/my_px_776"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="请输入加入码"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_80"
        android:layout_margin="@dimen/my_px_12"
        android:background="@drawable/drawable_meeting_code"
        android:focusable="true"
        android:inputType="number"
        android:padding="@dimen/my_px_12" />

    <LinearLayout
        android:id="@+id/dialog_meetingcamera_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_px_12"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_px_8"
            android:src="@drawable/dialog_red_warnning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_px_84"
            android:layout_marginLeft="@dimen/my_px_8"
            android:text="将要开启实况模式，将实时拍摄您的参会场景并上传至主持人端"
            android:textColor="@color/black"
            android:textSize="@dimen/my_px_30" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/my_px_25"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="@dimen/my_px_254"
            android:layout_height="@dimen/my_px_75"
            android:background="@drawable/bt_code_qd_pad"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_25">

            <requestFocus />
        </ImageButton>

        <TextView
            android:id="@+id/noCodeJoin"
            android:layout_width="@dimen/my_px_200"
            android:layout_height="@dimen/my_px_75"
            android:layout_marginLeft="@dimen/my_px_35"
            android:background="@drawable/bg_meeting_no_code_focus"
            android:focusable="true"
            android:gravity="center"
            android:text="观众加入"
            android:textColor="@drawable/meeting_text_color_selector"
            android:textSize="@dimen/my_sp_18">

        </TextView>

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="@dimen/my_px_254"
            android:textSize="@dimen/my_sp_25"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/my_px_65"
            android:gravity="center"
            android:background="@drawable/bt_code_qx"
            android:layout_height="@dimen/my_px_75" />
    </LinearLayout>
</LinearLayout>