<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stop_audience"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_audience_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/handsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_handsup_red" />

    <TextView
        android:id="@+id/audience_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/my_sp_30"
        tools:text="1. 唐姗姗" />

    <TextView
        android:id="@+id/postTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_post_type"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="6dp"
        tools:text="乡镇客户（伞下）"
        android:textColor="@color/c_fff000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/auditStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_audit_status" />

    <ImageView
        android:id="@+id/clientType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/calling"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_calling"
        android:drawablePadding="8dp"
        android:text="连麦中..."
        android:textColor="@color/c_6BD500"
        android:textSize="@dimen/my_sp_30"
        android:visibility="gone" />

    <TextView
        android:gravity="center"
        android:id="@+id/stop_speak"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_talk_selector"
        android:focusable="true"
        android:text="禁言"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_30"
        android:visibility="visible" />

    <TextView
        android:gravity="center"
        android:id="@+id/talk"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_talk_selector"
        android:text="马上连麦"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_30"
        android:visibility="visible" />

    <TextView
        android:gravity="center"
        android:id="@+id/remove_person"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_talk_selector"
        android:focusable="true"
        android:text="移除参会人"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_30"
        android:visibility="visible" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_talk_selector"
        android:focusable="true"
        android:padding="12dp"
        android:text="查看"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_30"
        android:visibility="gone" />

</LinearLayout>
