<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_right_angle_selector"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="235dp"
            android:layout_height="139dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="235dp"
                android:layout_height="139dp"
                android:background="@color/c_172938" />

            <ImageView
                android:id="@+id/video_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_video" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view_num"
                android:drawablePadding="6dp"
                android:text="0"
                android:textColor="#5f7c94"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_like_num"
                android:drawablePadding="6dp"
                android:text="0"
                android:textColor="#5f7c94"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/my_px_350"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:marqueeRepeatLimit="-1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>
</FrameLayout>